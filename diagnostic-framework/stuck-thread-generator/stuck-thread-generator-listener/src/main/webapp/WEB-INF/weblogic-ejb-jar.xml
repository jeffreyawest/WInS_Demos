<weblogic-ejb-jar xmlns="http://www.bea.com/ns/weblogic/90" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.bea.com/ns/weblogic/90
                  http://www.bea.com/ns/weblogic/90/weblogic-ejb-jar.xsd">

  <weblogic-enterprise-bean>
    <ejb-name>StuckThreadGeneratorListenerEJB</ejb-name>
    <dispatch-policy>wm/StuckThreadGeneratorListener</dispatch-policy>
  </weblogic-enterprise-bean>

  <work-manager>
    <name>wm/StuckThreadGeneratorListener</name>

    <max-threads-constraint>
      <name>wm/StuckThreadGeneratorListener-MAX</name>
      <pool-name>jdbc.ds.weblogic_examples</pool-name>
    </max-threads-constraint>

    <ignore-stuck-threads>false</ignore-stuck-threads>

  </work-manager>

</weblogic-ejb-jar>