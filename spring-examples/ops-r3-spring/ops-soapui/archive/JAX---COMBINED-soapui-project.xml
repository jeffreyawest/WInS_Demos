<?xml version="1.0" encoding="UTF-8"?>
<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:ser="http://demo.oracle.com/ops/domain/services" xmlns:ship="http://demo.oracle.com/ops/domain/services/shipment" xmlns:com="http://demo.oracle.com/ops/domain/schema/common" xmlns:ship1="http://demo.oracle.com/ops/domain/schema/shipping">
	<soapenv:Header/>
	<soapenv:Body>
		<ser:createShipment>
			<!--Optional:-->
			<arg0>
				<ship:RequestHeader>
					<!--Optional:-->
					<com:SourceSystem>?</com:SourceSystem>
					<!--Optional:-->
					<com:SourceSystemUser>?</com:SourceSystemUser>
					<!--Optional:-->
					<com:SourceSystemTxId>?</com:SourceSystemTxId>
				</ship:RequestHeader>
				<ship:Shipment>
               <ship1:ExternalReferenceId>${RequestProperties#ExternalId}</ship1:ExternalReferenceId>

					<ship1:FromAddress>
						<com:Addressee>Jeff West</com:Addressee>
						<com:AddressLine1>123 Main St</com:AddressLine1>
						<com:City>Los Angeles</com:City>
						<com:State>CA</com:State>
						<com:PostalCode>90036</com:PostalCode>
					</ship1:FromAddress>
					<ship1:ToAddress>
						<com:Addressee>Larry Ellison</com:Addressee>
						<com:AddressLine1>Oracle HQ</com:AddressLine1>
						<com:City>Redwood Shores</com:City>
						<com:State>CA</com:State>
						<com:PostalCode>12345</com:PostalCode>
					</ship1:ToAddress>
					<ship1:ShippingServiceName>?</ship1:ShippingServiceName>
					<!--1 or more repetitions:-->
					<ship1:Parcel>
						<ship1:Contents>stuff</ship1:Contents>
						<ship1:Height>1</ship1:Height>
						<ship1:Width>2</ship1:Width>
						<ship1:Length>3</ship1:Length>
						<ship1:Weight>4</ship1:Weight>
						<ship1:ParcelStatus>?</ship1:ParcelStatus>
					</ship1:Parcel>
					<ship1:Parcel>
						<ship1:Contents>more stuff</ship1:Contents>
						<ship1:Height>1</ship1:Height>
						<ship1:Width>2</ship1:Width>
						<ship1:Length>3</ship1:Length>
						<ship1:Weight>4</ship1:Weight>
						<ship1:ParcelStatus>?</ship1:ParcelStatus>
					</ship1:Parcel>
				</ship:Shipment>
			</arg0>
		</ser:createShipment>
	</soapenv:Body>
</soapenv:Envelope>